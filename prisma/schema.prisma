generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  //directUrl = env("DIRECT_URL")
}

model User {
  id            String            @id @default(cuid())
  name          String
  email         String            @unique
  password      String
  role          Role              @default(ATTENDANT)
  businessId    String?
  Affiliate     Affiliate[]
  MedicalRecord MedicalRecord[]
  business      Business?         @relation(fields: [businessId], references: [id], onDelete: Cascade, map: "user_business_relation")
  createAt      DateTime          @default(now())
  updateAt      DateTime          @updatedAt
  
  @@index([businessId], map: "user_business_index")
}

model Business {
  id           String        @id @default(cuid())
  name         String
  address      String
  phone        String
  email        String

  appointments Appointment[]
  clients      Client[]
  products     Product[]
  sales        Sale[]
  services     Service[]
  users        User[]
  createAt     DateTime      @default(now())
  updateAt     DateTime      @updatedAt
}

model Client {
  id         String   @id @default(cuid())
  name       String
  email      String?
  phone      String?
  businessId String
  business   Business @relation(fields: [businessId], references: [id], map: "client_business_relation")
  pets       Pet[]
  Sale       Sale[]
  createAt   DateTime @default(now())
  updateAt   DateTime @updatedAt
  
  @@index([businessId], map: "client_business_index")
}

model Pet {
  id           String          @id @default(cuid())
  name         String
  species      String
  breed        String
  birthDate    DateTime?
  clienteId    String
  appointments Appointment[]
  records      MedicalRecord[]
  client       Client          @relation(fields: [clienteId], references: [id], onDelete: Cascade, map: "pet_client_relation")
  createAt     DateTime        @default(now())
  updateAt     DateTime        @updatedAt
  
  @@index([clienteId], map: "pet_client_index")
}

model Appointment {
  id         String            @id @default(cuid())
  date       DateTime
  status     AppointmentStatus @default(SCHEDULED)
  petId      String
  serviceId  String?
  businessId String
  notes      String?
  
  business   Business          @relation(fields: [businessId], references: [id], map: "appointment_business_relation")
  pet        Pet               @relation(fields: [petId], references: [id], onDelete: Cascade, map: "appointment_pet_relation")
  service    Service?          @relation(fields: [serviceId], references: [id], map: "appointment_service_relation")
  createAt   DateTime          @default(now())
  updateAt   DateTime          @updatedAt
  
  @@index([businessId], map: "appointment_business_index")
  @@index([petId], map: "appointment_pet_index")
  @@index([serviceId], map: "appointment_service_index")
}

model Service {
  id          String        @id @default(cuid())
  name        String
  price       Float
  duration    Int
  businessId  String
  Appointment Appointment[]
  business    Business      @relation(fields: [businessId], references: [id], map: "service_business_relation")
  createAt    DateTime      @default(now())
  updateAt    DateTime      @updatedAt
  
  @@index([businessId], map: "service_business_index")
}

model Product {
  id         String     @id @default(cuid())
  name       String
  price      Float
  stock      Int
  businessId String
  business   Business   @relation(fields: [businessId], references: [id], map: "product_business_relation")
  SaleItem   SaleItem[]
  createAt   DateTime   @default(now())
  updateAt   DateTime   @updatedAt
  
  @@index([businessId], map: "product_business_index")
}

model Sale {
  id         String     @id @default(cuid())
  clientId   String?
  businessId String
  total      Float
  dateSale   DateTime   @default(now())
  business   Business   @relation(fields: [businessId], references: [id], map: "sale_business_relation")
  client     Client?    @relation(fields: [clientId], references: [id], onDelete: Cascade, map: "sale_client_relation")
  items      SaleItem[]
  createAt   DateTime   @default(now())
  updateAt   DateTime   @updatedAt
  
  @@index([businessId], map: "sale_business_index")
  @@index([clientId], map: "sale_client_index")
}

model SaleItem {
  id        String  @id @default(cuid())
  saleId    String
  productId String
  quantity  Int
  price     Float
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade, map: "saleitem_product_relation")
  sale      Sale    @relation(fields: [saleId], references: [id], onDelete: Cascade, map: "saleitem_sale_relation")
  createAt  DateTime @default(now())
  updateAt  DateTime @updatedAt
  
  @@index([productId], map: "saleitem_product_index")
  @@index([saleId], map: "saleitem_sale_index")
}

model MedicalRecord {
  id          String   @id @default(cuid())
  petId       String
  vetId       String?
  date        DateTime @default(now())
  description String
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade, map: "medicalrecord_pet_relation")
  vet         User?    @relation(fields: [vetId], references: [id], onDelete: SetNull, map: "medicalrecord_vet_relation")
  createAt    DateTime @default(now())
  updateAt    DateTime @updatedAt
  
  @@index([petId], map: "medicalrecord_pet_index")
  @@index([vetId], map: "medicalrecord_vet_index")
}

model Affiliate {
  id                String              @id @default(cuid())
  userId            String
  code              String              @unique
  earnings          Float               @default(0)
  user              User                @relation(fields: [userId], references: [id], map: "affiliate_user_relation")
  AffiliateReferral AffiliateReferral[]
  createAt          DateTime            @default(now())
  updateAt          DateTime            @updatedAt
  
  @@index([userId], map: "affiliate_user_index")
}

model AffiliateReferral {
  id             String         @id @default(cuid())
  affiliateId    String
  referredUserId String?
  type           ReferralType
  value          Float
  status         ReferralStatus
  affiliate      Affiliate      @relation(fields: [affiliateId], references: [id], onDelete: Cascade, map: "affiliatereferral_affiliate_relation")
  createAt       DateTime       @default(now())
  updateAt       DateTime       @updatedAt
  
  @@index([affiliateId], map: "affiliatereferral_affiliate_index")
}

enum Role {
  ADMIN
  VET
  ATTENDANT
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELLED
}

enum ReferralType {
  USER_SIGNUP
  BUSINESS_SIGNUP
  ORDER
}

enum ReferralStatus {
  PENDING
  APPROVED
  PAID
}